<div class="box wide">
  <div class="legend">
    Login
  </div>

  <%= form_tag login_url do %>
  <p>
    <%= label_tag :email, t(:emailorusernamefield) %>
    <%= text_field_tag :email, "", :size => 30, :autofocus => "autofocus" %>
    <br />

    <%= label_tag :password, t(:passwordfield) %>
    <%= password_field_tag :password, "", :size => 30 %>
    <br />
    </p>

    <p>
    <%= submit_tag t(:loginbutton) %>
    </p>

    <p>
    <%=t :forgotyourpassword %> <%= link_to t(:resetyourpasswordlink),
      forgot_password_url %>.
    </p>

    <p>
    <%=t :notauseryetpart1 %><a href="/u/"><%=t :notauseryetpart2 %></a><%=t :notauseryetpart3 %></a>
    <% if Rails.application.allow_invitation_requests? %>
      <%=t :notauseryetpart4 %></a> <a href="/invitations/request"><%=t :notauseryetpart5 %></a>.
    <% else %>
      <%=t :notauseryetpart6 %>
    <% end %>
    </p>

    <% if @referer.present? %>
      <%= hidden_field_tag :referer, @referer %>
    <% end %>
  <% end %>
</div>
